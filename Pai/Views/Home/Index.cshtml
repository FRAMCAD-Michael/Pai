@{
    ViewBag.Title = "Home Page";
}

<div class="row" style="margin-top:30px;">
    <div class="col-md-3">
        <ul class="list-group">
            <li class="list-group-item">Dashboard</li>
            <li class="list-group-item">My Company</li>
            <li class="list-group-item">My Schedule</li>
            <li class="list-group-item">My Resource</li>
            <li class="list-group-item">My Cloud</li>
            <li class="list-group-item active">My Product</li>
            <li class="list-group-item">My Transactions</li>
            <li class="list-group-item">Get Help</li>
        </ul>
    </div>
    <div class="col-md-9">
        <h2>Create new product</h2>
        <p>Complete the form and we will be in touch soon</p>
        <form class="form-horizontal">
            <div class="form-group" style="margin-bottom:30px;">
                <label for="exampleInputEmail1" class="col-md-3">*Product type</label>
                <div class="col-md-9">
                    <select class="form-control col-md-10">
                        <option selected>Choose one</option>
                        <option>Bicycle</option>
                    </select>
                </div>

            </div>
            <h4>Requirement information</h4>
            <hr />
            <div class="form-group ">
                <label for="exampleInputPassword1" class="col-md-3">*Way of use</label>
                <div class="col-md-9"><input type="password" class="form-control" id="exampleInputPassword1"></div>
            </div>
            <div class="form-group ">
                <label for="exampleInputPassword1" class="col-md-3">*Rust prevention method</label>
                <div class="col-md-9">
                    <input type="password" class="form-control" id="exampleInputPassword1">
                </div>
                
            </div>
            <div class="form-group ">
                <label for="exampleInputPassword1" class="col-md-3">*Frame set shape</label>
                <div class="col-md-9">
                    <input type="password" class="form-control" id="exampleInputPassword1">
                </div>
 
            </div>
            <div class="form-group ">
                <label for="exampleInputPassword1" class="col-md-3">*Vibration damper</label>
                <div class="col-md-9">
                    <input type="password" class="form-control" id="exampleInputPassword1">
                </div>

            </div>
            <div class="form-group " style="margin-bottom:30px;">
                <label for="exampleInputPassword1" class="col-md-3">*Type of material</label>
                <div class="col-md-9">
                    <input type="password" class="form-control" id="exampleInputPassword1">
                </div>

            </div>
            <h4>Personalised options</h4>
            <hr />
            <div class="form-group">
                <label for="exampleInputFile" class="col-md-3">Upload your own sketch</label>
                <div class="col-md-9">
                    <input type="file" id="exampleInputFile">
                </div>

            </div>
            <div class="form-group">
                <label for="exampleInputFile" class="col-md-3">Your prefered contact method</label>
                <div class="col-md-9">
                    <select class="form-control col-md-10">
                        <option selected>Choose one</option>
                        <option>Telephone</option>
                        <option>Email</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputFile" class="col-md-3">Your prefered design method</label>
                <div class="col-md-9">
                        <label class="checkbox-inline">
                            <input type="checkbox" value="">
                            Co-design
                        </label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                            <label class="checkbox-inline">
                                <input type="checkbox" value="">
                                By designer
                            </label>
                </div>

            </div>
            <div class="form-group">
                <label for="text" class="col-md-3">Other preferences</label>
                <div class="col-md-9">
                    <textarea class="form-control" rows="4"></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-success pull-right">Submit</button>
        </form>
    </div>
</div>